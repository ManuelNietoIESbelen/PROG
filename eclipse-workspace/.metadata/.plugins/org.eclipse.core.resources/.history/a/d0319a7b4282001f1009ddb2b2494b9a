import java.util.Scanner;
public class CalculoVertical {

  private static final double ACELERACION_GRAVEDAD = 9.8;

  public static void main(String[] args) {
    Scanner sc= new Scanner(System.in);
    System.out.println("EXAMEN DE MANUEL ÁNGEL NIETO JIMÉNEZ. CALCULO DE LANZAMIENTO VERTICAL");
    System.out.println("¿Cuanto es el valor de la velocidad inicial en m/s?");
    double velocidadInicial=Double.parseDouble(sc.nextLine());
    
    double tiempo= velocidadInicial/ACELERACION_GRAVEDAD;
    
    double altura= (velocidadInicial*tiempo) - ((ACELERACION_GRAVEDAD*tiempo*tiempo)/2);
  
  System.out.println(tiempo);
  System.out.println(altura);
  
  
  
  }

}
